{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/hello", // 表示可执行程序所在的路径，add_executable from CMakeLists.txt
            "args": [], // 传递给程序的命令行参数，一般为空
            "stopAtEntry": false, // 调试器是否在目标的入口点停止
            "cwd": "${workspaceFolder}", // 项目目录
            "environment": [],
            "externalConsole": true, // 调试时是否显示控制台窗口，一般为true显示控制台
            "MIMode": "gdb", // 指定连接的调试器
            "preLaunchTask": "build", // tasks: label from tasks.json 每次调试之前会自动进行build
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}